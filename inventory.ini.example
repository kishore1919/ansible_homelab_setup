# Ansible Inventory for Homelab Setup
# This file defines the target hosts and groups for the Ansible automation

[homelab_servers]
# Primary server for homelab setup
localhost ansible_connection=local ansible_user=root

[basic_setup_servers]
# Servers that will have basic system setup applied
localhost ansible_connection=local ansible_user=root

[kvm_servers]
# Servers that will have KVM virtualization setup applied
localhost ansible_connection=local ansible_user=root

[app_servers]
# Servers that will have application framework deployed
localhost ansible_connection=local ansible_user=root

